{% extends "base.html.jinja" %}
{% block title %}DockCure{% endblock %}
{% block content %}
    <div class="p-4">
        <div class="container text-center">
            <img src="{{ url_for('static', filename='images/dockcure.png') }}" alt="DockCure Logo" class="img-fluid mb-4" style="max-width: 200px;">
        </div>
        <div class="container">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="dockerImage" class="form-label">Docker image to scan</label>
                    <input type="text" class="form-control" id="dockerImage" placeholder="ex: ubuntu:latest">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-primary w-100" id="scanButton">Scan</button>
                    <div class="modal fade" id="scanModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                            <div class="modal-body" id="scanModalContent">
                            </div>
                            <div class="modal-footer justify-content-center">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Ok</button>
                            </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-warning w-100" id="fixButton">Fix docker image</button>
                </div>
                <div class="col-md-3 d-flex align-items-end my-3">
                    <button class="btn btn-warning w-100" id="autofixButton">Autofix docker image</button>
                </div>
                <div class="col-md-3 d-flex align-items-end my-3">
                    <button class="btn btn-warning w-100" id="downloadButton" style="display: none;">Download fixed image</button>
                </div>
            </div>
        <div class="row justify-content-center">
            <!-- Conteneur du spinner et du texte -->
            <div id="loadingContainer" class="d-flex align-items-center">
                <div id="loadingSpinner" class="spinner-border text-primary mb-3" role="status" style="display: none;">
                </div>
                <div id="loadingText" class="ms-2" style="display: none;"></div> <!-- Le texte est à droite du spinner -->
            </div>
        </div>


            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Package</th>
                            <th>Version</th>
                            <th>CVEs</th>
                            <th>Master Package</th>
                            <th>Recommended Version</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="scanResults">
                        <!-- Données ajoutées dynamiquement -->
                    </tbody>
                </table>
            </div>

            <div class="mt-4">
                <label for="logs" class="form-label">Logs</label>
                <pre id="logs" class="form-control" rows="6" readonly></pre>
            </div>
        </div>
        <!-- Menu contextuel (caché par défaut) -->
<div id="contextMenu" class="dropdown-menu" style="display: none; position: absolute; z-index: 999;">
    <!-- Pour une sélection multiple -->
    <button class="dropdown-item" id="upgradeLatestMulti" style="display:none;">Upgrade to Latest</button>
    <button class="dropdown-item" id="upgradeRecommendedMulti" style="display:none;">Upgrade to Recommended</button>
    <button class="dropdown-item" id="removeMulti" style="display:none;">Remove</button>

    <!-- Pour une sélection unique -->
    <button class="dropdown-item" id="upgradeToVersionSingle" style="display:none;">Upgrade to...</button>
    <button class="dropdown-item" id="upgradeLatestSingle" style="display:none;">Upgrade to Latest</button>
    <button class="dropdown-item" id="upgradeRecommendedSingle" style="display:none;">Upgrade to Recommended</button>
    <button class="dropdown-item" id="removeSingle" style="display:none;">Remove</button>
</div>

    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="{{ url_for('static', filename='js/bootstrap.bundle.min.js')}}"></script>
    <script src="{{ url_for('static', filename='js/main.js')}}"></script>
{% endblock %}